{
  "name": "quivly-dev-docs",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"cross-env NODE_ENV=development vite --port 5175\" \"wait-on http://localhost:5175 && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5175 electron .\"",
    "electron:build": "vite build && electron-builder build --mac",
    "electron:package": "vite build && electron-builder build --mac --dir",
    "mcp": "tsx mcp-server/index.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "lucide-react": "^0.555.0",
    "mermaid": "^11.12.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "tsx": "^4.20.6",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.quivly.engineering-hub",
    "productName": "Quivly Engineering Hub",
    "files": [
      "dist/**/*",
      "electron-main.cjs"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "directories": {
      "output": "release"
    }
  }
}
